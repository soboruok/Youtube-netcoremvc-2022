<section class="mainAbout my-5">
    <div class="container">
        <div class="showcase-form card">
            <h2>지원서작성하기</h2>
            <form>
                <div class="form-control">
                    <input type="text"
                           name="UserName"
                           placeholder="이름을 작성해주세요" />
                </div>
                <div class="form-control">
                    <input type="text"
                           name="UserPhone"
                           placeholder="연락처를 작성해주세요" />
                </div>
                <div class="form-control">
                    <select name="UserCareer" placeholder="UserCourse">
                        <option value="">지원분야를 선택해주세요</option>
                        <option value="BackEnd">BackEnd</option>
                        <option value="FrontEnd">FrontEnd</option>
                    </select>
                </div>
                <div class="form-control">
                    <input type="text"
                           name="Useraddress"
                           placeholder="주소를 적어주세요" />
                </div>
                <div class="form-control">
                    <input type="file"
                           name="UserCV"
                           placeholder="CV를 업로드해주세요" />
                </div>

                <input type="submit" value="지원하기" class="btn btn-primary" />
            </form>
        </div>
    </div>
</section>